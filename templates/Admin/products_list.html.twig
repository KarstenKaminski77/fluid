{% extends 'Admin/layout_list.html.twig' %}
{% block meta_decription %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="row border-bottom admin-header" style="left: 16.8%" data-controller="admin--products-list">
        <div class="col-12 col-sm-3 text-truncate mt-1 pt-3 pb-3 ps-4">
            <h4 class="text-truncate m-0">Products</h4>
        </div>
        <div class="col-12 col-sm-9 text-truncate mt-1 pt-3 pb-3 px-4">
            <div class="row">
                <div class="col-1 pe-0">
                    {% set increment = 10 %}
                    {% set i = 0 %}
                    <select
                        name="items-per-page"
                        id="items_per_page"
                        class="form-control form-control-sm d-inline"
                    >
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        {% for i in range(1, increment) %}
                            <option value="{{ i * 10 }}">{{ i * 10 }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-11">
                    <div class="input-group">
                        <input
                            name="search-string"
                            id="search_string"
                            class="form-control form-control-sm"
                            type="text"
                            placeholder="Search..."
                        >
                        <div class="select-wrapper">
                            <select
                                id="manufacturers"
                                name="manufacturers"
                                class="input-group-border"
                            >
                                <option value="">Filter by brand</option>
                                {% for manufacture in manufacturers %}
                                    <option value="{{ manufacture.id }}">{{ nzo_decrypt(manufacture.name) }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="input-group-append">
                            <button
                                class="btn btn-primary btn-sm w-sm-100 mt-2 mt-sm-0"
                                id="search_btn"
                                data-action="click->admin--products-list#onClickBtnSearch"
                            >
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                            <a
                                href="{{ path('products', {'productId':0}) }}"
                                class="btn btn-primary btn-sm float-end w-sm-100 text-truncate ms-3 mt-2 mt-sm-0"
                            >
                                <i class="fa-solid fa-circle-plus me-2"></i> ADD PRODUCT
                            </a>
                            <a
                                href=""
                                id="reset_filters"
                                class="btn btn-secondary float-end btn-sm ms-sm-3 w-sm-100 mt-2 mt-sm-0"
                            >
                                <i class="fa-solid fa-rotate-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row pb-3 pt-2 pt-sm-4 mt-sm-5 border-left border-right" data-controller="admin--products-list">
        <div class="row pb-3 border-bottom d-none d-md-flex">
            <div class="col-1 fw-bold ps-4 text-truncate">
                #ID
            </div>
            <div class="col-1 fw-bold text-truncate">
                Published
            </div>
            <div class="col-4 fw-bold text-truncate">
                Name
            </div>
            <div class="col-2 fw-bold text-truncate">
                Category
            </div>
            <div class="col-2 fw-bold text-truncate">
                Sub Category
            </div>
            <div class="col-1 fw-bold text-truncate">
                Stock
            </div>
        </div>
        <div id="products">
        </div>
    </div>

    <!-- Delete Product Modal -->
    <div class="modal fade" id="modal_delete_product" tabindex="-1" aria-labelledby="user_delete_label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="user_delete_label">Delete Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 mb-0">
                            Are you sure you would like to delete this product? This action cannot be undone.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-sm" data-bs-dismiss="modal">CANCEL</button>
                    <button type="submit" class="btn btn-danger btn-sm" id="delete_product">DELETE</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End Delete Product Modal -->
{% endblock %}

{% block javascripts %}
    {{ parent() }}

<script>

    $(document).ready(function ()
    {
        let uri = window.location.pathname.split('/');
        let pageNo = uri[3];

        $('#search_string').val($.session.get('search-string'));
        $('#manufacturers').val($.session.get('manufacturer'));
        $('#items_per_page').val($.session.get('items-per-page'));

        getProducts(pageNo);

        $(document).on('click', '#search_btn', function ()
        {
            getProducts(1);
        });

        $(document).on('change', '#manufacturers, #items_per_page', function ()
        {
            let uri = window.location.pathname.split('/');
            pageNo = uri[3];

            getProducts(pageNo);
        });

        $(document).on('click', '.address-pagination', function (e)
        {
            e.preventDefault();

            getProducts($(this).attr('data-page-id'));
        });

        function getProducts(pageNo)
        {
            let searchString = $('#search_string').val();
            let manufacturer = $('#manufacturers').val();
            let itemsPerPage = $('#items_per_page').val();

            $.session.set('page-no', pageNo);

            if(searchString != '' || searchString != 'undefined')
            {
                $.ajax({
                    url: "/admin/product-search",
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        'search-string': searchString,
                        'manufacturer': manufacturer,
                        'items-per-page': itemsPerPage,
                        'page_id': pageNo,
                    },
                    beforeSend: function ()
                    {
                        isLoading(true);
                    },
                    success: function (response)
                    {
                        $('#products').empty().append(response.html);
                        isLoading(false);
                        $.session.set('search-string', searchString);
                        $.session.set('manufacturer', manufacturer);
                        $.session.set('items-per-page', itemsPerPage);

                        window.history.pushState(null, "Fluid", '/admin/products/'+ response.currentPage);

                        popOver();
                    }
                });
            }
        }

        $(document).on('click', '#reset_filters', function (e)
        {
            e.preventDefault();

            $.session.set('search-string', '');
            $.session.set('manufacturer', '');

            $('#search_string').val('');
            $('#manufacturers').val('');

            getProducts(1);
        })

        $(document).on('change', '.is-published', function (e){

            let product_id = $(this).data('product-id');
            let is_published = '';

            if ($(this).is(':checked')) {

                is_published = 1;

            } else {

                is_published = 0;
            }

            $.ajax({
                url: "{{ path('product_is_published') }}",
                type: 'POST',
                dataType: 'json',
                data: {
                    is_published:is_published,
                    product_id:product_id
                },
                success: function (response) {

                }
            });
        });
        $(document).on('click', '.delete-icon', function (e){

            $('#delete_product').attr('data-product-id', $(this).data('product-id'));
        });
        $(document).on('click', '#delete_product', function (e){

            let productId = $(this).attr('data-product-id');

            $.ajax({
                url: "{{ path('product_crud') }}",
                type: 'POST',
                dataType: 'json',
                data: {
                    'delete':productId,
                },
                success: function (response) {

                    getFlash(response);
                    $('#modal_delete_product').modal('toggle');
                    $('#row_'+ productId).remove();
                }
            });
        });

        function popOver()
        {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
            })
        }
    });
</script>
{% endblock %}